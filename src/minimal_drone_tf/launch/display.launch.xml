<?xml version="1.0"?>
<launch>
    <let name="urdf_path" 
        value="$(find-pkg-share minimal_drone_tf)/urdf/model.xacro" />

    <let name="gazebo_config_path" 
        value="$(find-pkg-share minimal_drone_tf)/config/bridge_config.yaml" />
    
    <node pkg="robot_state_publisher" exec="robot_state_publisher">
        <param name="robot_description" 
            value="$(command 'xacro $(var urdf_path)')"/>
    </node>

    <node pkg="ros_gz_bridge" exec="parameter_bridge">
        <param name="config_file"
            value="$(var gazebo_config_path)" />
    </node>

    <node pkg="rviz2" exec="rviz2" output="screen"></node>

    

</launch>